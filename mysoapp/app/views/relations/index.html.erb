<p id="notice"><%= notice %></p>

<h1>Relations</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relations.each do |relation| %>
      <tr>
        <td><%= relation.user1.name %></td>
        <td><%= relation.user2.name %></td>
        <% if relation.status == 0 %>
          <td>Pendiente</td>
        <% else %>
          <td>Aceptada</td>
        <% end %>
        <td><%= link_to 'Accept', accept_path(relation.id) %></td>
        <td><%= link_to 'Deny', deny_path(relation.id) %></td>
        <td><%= link_to 'Revoke', revoke_path(relation.id), data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Show', relation %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

