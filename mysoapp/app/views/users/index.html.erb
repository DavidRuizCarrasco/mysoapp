<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <% if (User.where(name: session[:user]).first).role == 0 %>
        <th>Password</th>
        <th>Role</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if (User.where(name: session[:user]).first).role == 0 %>
          <td><%= user.password %></td>
          <td><%= user.role %></td>
        <% end %>
        <td><%= link_to 'Send Relation Query', sendQuery_path(user.id) %></td>
        <td><%= link_to 'Show', user %></td>
        <% if (User.where(name: session[:user]).first).role == 0 or user.name == session[:user] %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

