<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>User</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.text %></td>
        <td><%= entry.user.name %></td>
        <td><%= entry.likes %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Share', share_path(entry.id) %></td>
        <td><%= link_to 'Like', like_path(entry.id) %></td>
        <td><%= link_to 'Unlike', unlike_path(entry.id) %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
